@{
    ViewData["Title"] = "Zarejestruj się";
}

@section Stylesheets {
    <link rel="stylesheet" href="~/css/game.css">
}

<div class="container page-container">
    <form class="needs-validation p-2" oninput='up2.setCustomValidity(up2.value != up.value ? "Passwords do not match." : "")' novalidate>
        <div class="mb-1">
            <label for="userName">Nazwa użytkownika</label>
            <input type="text" class="form-control" id="userName" minlength="3" maxlength="25" pattern="^[a-zA-Z][a-zA-Z0-9_]*(?: [a-zA-Z0-9]+)?$" required>
        </div>
        <div class="mb-1">
            <label for="userEmail">Email</label>
            <input type="email" class="form-control" id="userEmail" required>
        </div>
        <div class="mb-1">
            <label for="userPassword">Hasło</label>
            <input type="password" class="form-control" id="userPassword" minlength="6" maxlength="64" name="up" required>
        </div>
        <div class="mb-1">
            <label for="userRePassword">Powtórz hasło</label>
            <input type="password" class="form-control" minlength="6" maxlength="64" name="up2" id="userRePassword" required>
        </div>
        <div class="mb-1">
            <button type="submit" data-buttontype="register" class="btn btn-primary mt-2">Zarejestruj się</button>
        </div>
    </form>
    Mam już konto. <a href="@Url.Action("Index", "Login")">Zaloguj się!</a>
</div>

@section Scripts {
    <script>
        const registerAccountUrl = '@Url.Action("RegisterAccount", "Login")';
        const loginHomeUrl = '@Url.Action("Index", "Login")';
    </script>
    <script src="~/js/common.js"></script>
    <script src="~/js/login.js"></script>
}